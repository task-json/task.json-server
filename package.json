{
  "name": "task.json-server",
  "version": "1.1.0",
  "description": "Sync server for task.json",
  "scripts": {
    "type-guard": "ts-auto-guard",
    "dev": "nodemon --watch 'src/**/*' -e ts,tsx --exec ts-node ./src/server.ts",
    "build": "rm -rf dist && tsc -p ./tsconfig.build.json",
    "start": "NODE_ENV=production node ./dist/server.js",
    "test": "jest"
  },
  "type": "module",
  "bin": {
    "task.json-server": "./dist/server.js"
  },
  "files": [
    "package*.json",
    "dist/*",
    "LICENSE"
  ],
  "keywords": [
    "task.json",
    "server",
    "sync",
    "task",
    "todo"
  ],
  "author": "DCsunset",
  "license": "AGPL-3.0",
  "dependencies": {
    "fastify": "^4.10.2",
    "luxon": "^3.1.1",
    "task.json": "^2.8.0"
  },
  "devDependencies": {
    "@types/luxon": "^3.1.0",
    "@types/node": "^18.11.12",
    "ts-auto-guard": "^4.1.2",
    "typescript": "^4.9.4"
  }
}
